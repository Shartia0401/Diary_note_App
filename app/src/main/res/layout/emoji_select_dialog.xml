<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/share_round_popup"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <View
        android:id="@+id/time_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="parent"/>
    
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/diaryfont"
        android:textSize="30dp"
        android:gravity="center"
        android:text="이날의 기분"
        />

    <ImageButton
        android:id="@+id/emoji_btn_happy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintRight_toLeftOf="@id/emoji_btn_ache"
        android:background="@drawable/emoji_happy"
        android:layout_marginEnd="20dp"/>

    <ImageButton
        android:id="@+id/emoji_btn_ache"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:background="@drawable/emoji_ache"/>

    <ImageButton
        android:id="@+id/emoji_btn_angry"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toRightOf="@id/emoji_btn_ache"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:background="@drawable/emoji_angry"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/emoji_btn_happy"
        app:layout_constraintRight_toRightOf="@id/emoji_btn_happy"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:fontFamily="@font/diaryfont"
        android:textSize="30dp"
        android:text="행복"
        />

    <TextView

        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emoji_btn_ache"
        android:gravity="center"
        android:fontFamily="@font/diaryfont"
        android:textSize="30dp"
        android:text="슬픔"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/emoji_btn_angry"
        app:layout_constraintLeft_toLeftOf="@id/emoji_btn_angry"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:fontFamily="@font/diaryfont"
        android:textSize="30dp"
        android:text="화남"
        />





</androidx.constraintlayout.widget.ConstraintLayout>