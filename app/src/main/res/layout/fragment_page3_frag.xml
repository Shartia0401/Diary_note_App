<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date_Tv"
        android:layout_width="170dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="2000년 10월"
        android:gravity="center"
        android:textColor="#FFBB66"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/frag3_happy"
            android:layout_alignTop="@id/frag3_ache"
            android:layout_alignEnd="@id/frag3_ache"
            android:layout_marginEnd="90dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/emoji_happy"
            />
        <ImageView
            android:id="@+id/frag3_ache"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/emoji_ache"
            />
        <ImageView
            android:id="@+id/frag3_angry"
            android:layout_marginStart="90dp"
            android:layout_alignTop="@id/frag3_ache"
            android:layout_alignStart="@id/frag3_ache"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/emoji_angry" />
        <TextView
            android:id="@+id/frag3_happy_tv"
            android:layout_alignStart="@id/frag3_happy"
            android:layout_alignTop="@id/frag3_happy"
            android:layout_marginTop="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/frag3_ache_tv"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/frag3_happy_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/frag3_angry_tv"
            android:layout_alignStart="@id/frag3_angry"
            android:layout_alignTop="@id/frag3_happy_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
