<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/frame"
        android:layout_gravity="top"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/recyclerview_row_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="날짜 입니다"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/recyclerview_row_emoji"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/recyclerview_row_date"
            />


        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/recyclerview_row_name"
            android:layout_width="100dp"
            android:textColor="#3f3f3f"
            android:textSize="20sp"
            android:hint="제목."
            android:textStyle="bold"
            android:layout_height="25dp"
            android:layout_below="@id/recyclerview_row_date"/>

        <TextView
            android:id="@+id/recyclerview_row_content"
            android:text="내용"
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@id/recyclerview_row_name"
            />


        <ImageView
            android:id="@+id/recyclerview_row_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/recyclerview_row_content"
            android:adjustViewBounds="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/frag1_id"/>



</FrameLayout>