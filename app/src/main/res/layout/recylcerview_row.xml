<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recyclerview_row_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="날짜 입니다"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/recyclerview_row_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/recyclerview_row_date"
        />


    <TextView
        android:id="@+id/recyclerview_row_name"
        android:layout_width="match_parent"
        android:textColor="#3f3f3f"
        android:textSize="13sp"
        android:hint="제목."
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerview_row_date"/>

    <TextView
        android:id="@+id/recyclerview_row_content"
        android:text="내용"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerview_row_name"
        />


    <ImageView
        android:id="@+id/recyclerview_row_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/recyclerview_row_content"
        android:adjustViewBounds="true" />



</RelativeLayout>